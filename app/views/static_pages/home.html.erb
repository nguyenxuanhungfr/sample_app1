<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "microfeed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1 class="shadow" ><%= t ".welcome" %></h1>
  <h2>
    <%= t "text_home1" %>
    <a href="http://www.railstutorial.org/"><%= t "title" %></a>
    <%= t "text_home2" %>
  </h2>
  <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag(t("railspng"), alt: t("rails_logo")), "http://rubyonrails.org/" %>
<% end %>
